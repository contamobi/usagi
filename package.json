{
  "name": "Usagi",
  "description": "RabbitMQ Desktop Client",
  "version": "0.1.1",
  "author": "Joubert RedRat <me+github@redrat.com.br>",
  "main": "main.js",
  "devDependencies": {
    "electron": "^1.4.15",
    "electron-builder": "^13.9.0",
    "electron-packager": "^8.5.1"
  },
  "dependencies": {
    "jquery": "^3.1.1",
    "amqplib": "^0.5.1"
  },
  "build": {
    "appId": "cmobi.usagi.client",
    "app-category-type": "public.app-category.productivity"
  },
  "scripts": {
    "app": "node_modules/.bin/electron .",
    "package-linux": "node_modules/.bin/electron-packager . --overwrite --platform=linux --arch=x64 --prune=true --out=builds",
    "package-mac": "node_modules/.bin/electron-packager . --overwrite --platform=darwin --arch=x64 --prune=true --out=builds"
  }
}
